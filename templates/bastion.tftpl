tar xvzf openshift-client-linux.tar.gz
tar xvzf openshift-install-linux.tar.gz
tar xvzf oc-mirror.tar.gz
chmod +x oc-mirror

sudo install oc /usr/local/bin
sudo install oc-mirror /usr/local/bin
